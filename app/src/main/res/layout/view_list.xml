<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:paddingLeft="@dimen/view_sub_item_padding"
    android:paddingRight="@dimen/view_sub_item_padding">

    <TextView
        android:id="@+id/tv_list_item_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:minWidth="@dimen/view_list_item_txt_left_width" />

    <ImageView
        android:id="@+id/iv_line_verctial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_list_item_left"
        android:background="@drawable/nat_separate_line_vertical" />

    <TextView
        android:id="@+id/tv_list_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/iv_line_verctial"
        android:minWidth="@dimen/view_list_item_txt_left_width"
        android:text="test" />

</RelativeLayout>