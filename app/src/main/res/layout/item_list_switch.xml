<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_switch_item_switch_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wireConnect" />

    <Switch
        android:id="@+id/list_switch_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:minWidth="20dp"
        android:splitTrack="true"
        android:textOff=""
        android:textOn=""
        android:thumb="@drawable/swith_thump_seletor"
        android:track="@drawable/switch_track_seletor" />
</LinearLayout>
