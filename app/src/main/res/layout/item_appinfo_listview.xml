<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <ImageView
        android:id="@+id/item_appinfo_listview_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_appinfo_listview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/item_appinfo_listview_icon"
        android:text="Test" />

    <TextView
        android:id="@+id/item_appinfo_listview_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_appinfo_listview_label"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_appinfo_listview_icon"
        android:text="4.5 MB" />
</RelativeLayout>
